{
  "name": "js-fullstack-boilerplate",
  "version": "0.1.0",
  "description": "Javascript full-stack quick app setup",
  "main": "dist/index.js",
  "scripts": {
    "start": "npx babel src --watch --out-dir dist",
    "build": "npx babel src --out-dir dist",
    "test": "mocha",
    "prettier": "npx prettier --write .",
    "lint": "eslint **/*.js --ignore-pattern node_modules/"
  },
  "bin": {
    "create-fullstack-app": "./bin/createApp.js",
    "rg": "./bin/generateReactComponent.js",
    "bg": "./bin/generateBackendComponent.js"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filvecchiato/js-fullstack-boilerplate.git"
  },
  "keywords": [
    "npm",
    "node",
    "react",
    "javascript",
    "koa",
    "express",
    "mongo",
    "postgresql",
    "redux"
  ],
  "author": "Filippo Vecchiato",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/filvecchiato/js-fullstack-boilerplate/issues"
  },
  "homepage": "https://github.com/filvecchiato/js-fullstack-boilerplate#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "commitizen": "^4.2.1",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "mustache": "^4.0.1",
    "path": "^0.12.7",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
