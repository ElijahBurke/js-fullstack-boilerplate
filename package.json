{
  "name": "js-fullstack-boilerplate",
  "version": "1.0.0",
  "description": "Javascript full-stack quick app setup",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run lint && babel ./src -d ./lib",
    "lint": "eslint ./src",
    "test": "mocha --require babel-core/register",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "create-fullstack-app": "./bin/index.js"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filvecchiato/js-fullstack-boilerplate.git"
  },
  "keywords": [
    "npm",
    "node",
    "react",
    "javascript",
    "koa",
    "express",
    "mongo",
    "postgresql",
    "redux"
  ],
  "author": "Filippo Vecchiato",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/filvecchiato/js-fullstack-boilerplate/issues"
  },
  "homepage": "https://github.com/filvecchiato/js-fullstack-boilerplate#readme",
  "dependencies": {
    "commitizen": "^4.2.1",
    "inquirer": "^7.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "mocha": "^8.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
